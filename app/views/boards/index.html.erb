<h1 style="margin-top:150px">게시판</h1>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>제 목 </th>
          <th>내 용 </th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @boards.each do |board| %>
          <tr>
            <td><%= board.title %></td>
            <td><%= board.content %></td>
            <td><%= link_to '보기', board %></td>
            <td><%= link_to '수정', edit_board_path(board) %></td>
            <td><%= link_to '삭제', board, method: :delete, data: { confirm: '정말로 삭제하겠습니??' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

